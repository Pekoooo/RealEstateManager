<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <ImageView
        android:id="@+id/property_image_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/property_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOUSE"
        android:textSize="20sp"
        android:layout_marginStart="32dp"
        android:padding="4dp"

        app:layout_constraintStart_toEndOf="@id/property_image_view"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/property_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vancouver"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginStart="32dp"
        android:padding="4dp"
        app:layout_constraintStart_toEndOf="@id/property_image_view"
        app:layout_constraintTop_toBottomOf="@id/property_type"
        />

    <TextView
        android:id="@+id/property_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,500,000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:padding="4dp"
        app:layout_constraintStart_toEndOf="@id/property_image_view"
        app:layout_constraintTop_toBottomOf="@id/property_location"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/property_price"
        app:layout_constraintTop_toTopOf="@id/property_price"
        app:layout_constraintBottom_toBottomOf="@id/property_price"/>


</androidx.constraintlayout.widget.ConstraintLayout>